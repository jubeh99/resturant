<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="600dp"
    android:layout_height="650dp"
    android:layout_gravity="center"
    android:alpha=".9"
    android:background="@drawable/paper"
    android:visibility="visible"
    tools:visibility="visible">


    <ScrollView
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oregano"
            android:text=" Welcome Sir!                      You are now an approved customer of the restaurant and you can take advantage of the discounts and offers offered because you are special"
            android:textAlignment="center"
            android:textColor="#623104"
            android:textSize="48sp"
            android:textStyle="bold" />
    </ScrollView>

    <Button
        android:id="@+id/btnfollow"
        android:layout_width="153dp"
        android:layout_height="55dp"

        android:background="@drawable/log"
        android:fontFamily="@font/oleo_script"
        android:text="Done"
        android:textColor="#623104"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

</androidx.constraintlayout.widget.ConstraintLayout>